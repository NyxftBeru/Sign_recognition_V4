{
  "builds": [
    {
      "src": "sign_recognition_web_fyp_ori/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "buildCommand": "cd sign_recognition_web_fyp_ori && npm install && npm run build"
      }
    },
    {
      "src": "Sign Language Hand Tracker_ori/server.py",
      "use": "@vercel/python",
      "config": {
        "includeFiles": [
          "Sign Language Hand Tracker_ori/model.pkl",
          "Sign Language Hand Tracker_ori/feature_names.pkl",
          "Sign Language Hand Tracker_ori/requirements.txt"
        ],
        "maxLambdaSize": "15mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/predict",
      "dest": "Sign Language Hand Tracker_ori/server.py",
      "methods": ["POST"]
    },
    {
      "src": "/(.*)",
      "dest": "sign_recognition_web_fyp_ori/dist/$1"
    }
  ]
}